// Helper function to calculate the square of a number
function square(number) {
  return number * number;
}

// Helper function to check if a number is even
function isEven(number) {
  return number % 2 === 0;
}

// Main function using the helper functions
function processNumber(inputNumber) {
  const squared = square(inputNumber);
  
  if (isEven(squared)) {
    console.log(`${squared} is an even square.`);
  } else {
    console.log(`${squared} is an odd square.`);
  }
}

// Example usage
const userInput = 5;
processNumber(userInput);